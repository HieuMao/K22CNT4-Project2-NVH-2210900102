@model IEnumerable<K22CNT4_TTCD_Nguyễn_Văn_Hiếu_2210900102.Models.PRODUCT>

@{
    ViewBag.Title = "AdProIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AdProIndex</h2>

<p>
    @Html.ActionLink("Create New", "AdProCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <!-- Display product image -->
                @if (!string.IsNullOrEmpty(item.product_image))
                {
                    <img src="@Url.Content(item.product_image)" alt="Product Image" width="100" height="100" />
                }
                else
                {
                    <span>No Image</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "AdProEdit", new { id = item.product_id }) |
                @Html.ActionLink("Details", "AdProDetails", new { id = item.product_id }) |
                @Html.ActionLink("Delete", "AdProDelete", new { id = item.product_id })
            </td>
        </tr>
    }

</table>
