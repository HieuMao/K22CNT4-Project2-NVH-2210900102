@model K22CNT4_TTCD_Nguyễn_Văn_Hiếu_2210900102.Models.ORDER

<h2>Cảm ơn bạn đã đặt hàng!</h2>
<p>Ngày đặt hàng: @Model.order_date.ToString("dd/MM/yyyy")</p>
<p>Tổng số tiền: @Model.total_price.ToString("C")</p>

<h3>Order Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.ORDER_DETAIL)
        {
            <tr>
                <td>@detail.PRODUCT.product_id</td>
                <td>@detail.quantity</td>
                <td>@detail.product_price</td>
            </tr>
        }
    </tbody>
</table>
